<%- include('./partials/header') %>

<h1>Ajouter un étudiant</h1>

<% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger" role="alert">
        <%= error %>
    </div>
<% } %>

<form method="POST" action="/admin/createStudent">
    <p>
        <label for="promo_id">Promo</label>
        <select name="promo_id" id="promo_id" required>
            <option value="">Sélectionner une promo</option>
            <% promos.forEach(promo => { %>
                <option value="<%= promo.id %>"><%= promo.name %></option>
            <% }) %>
        </select>
    </p>
    <p>
        <label for="first_name">Prénom</label>
        <input type="text" name="first_name" id="first_name" placeholder="Prénom" required>
    </p>
    <p>
        <label for="last_name">Nom</label>
        <input type="text" name="last_name" id="last_name" placeholder="Nom" required>
    </p>
    <p>
        <label for="github_username">Pseudo Github</label>
        <input type="text" name="github_username" id="github_username" placeholder="Prenom Nom" required>
    </p>
    <p>
        <label for="profile_picture_url">URL de la photo de profil</label>
        <input type="url" name="profile_picture_url" id="profile_picture_url" placeholder="https://example.com/photo.jpg" required>
    </p>
    <p>
        <button type="submit">Valider</button>
        <a href="/">Annuler</a>
    </p>
</form>

<%- include('./partials/footer') %>
